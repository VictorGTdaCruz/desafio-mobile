<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/lojaScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <victorcruz.dms.ExpandableHeightListView
                android:id="@+id/lojaListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/carrinhoScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <victorcruz.dms.ExpandableHeightListView
                android:id="@+id/carrinhoListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/transacoesScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <victorcruz.dms.ExpandableHeightListView
                android:id="@+id/transacoesListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
    </FrameLayout>

</LinearLayout>